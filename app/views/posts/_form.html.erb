<%= form_for @post do |f|%>
    <% if flash[:errors]%>
        <%= flash[:errors]  %><br>
    <% end%>
    <%= f.label :title%>
    <%= f.text_field :title%><br>
    <%= f.label :content%>
    <%= f.text_area :content%><br>
    <%= f.label :blogger_id, "Blogger" %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name%><br>
    <%= f.label :destination_id, "Destination" %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name%>
    <%= f.submit %>
<% end %>